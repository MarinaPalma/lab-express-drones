<div id="mainList">


    <div class="center">
        <h1 class="title">Update drone</h1>
    </div>
    <div class="update">
        <form class="formUp" action="/drones/{{_id}}/edit" method="post">
            <label for='name'> Name</label>
            <input type='text' name='name' id='name' value="{{name}}" />

            <label for='propellers'>Number of propellers</label>
            <input type='number' name='propellers' id='propellers' min='0' value="{{propellers}}" />

            <label for='maxSpeed'>Max Speed</label>
            <input type='number' name='maxSpeed' id='maxSpeed' min='0' value="{{maxSpeed}}" />
            <button type='submit'>Update</button>
        </form>
    </div>
</div>